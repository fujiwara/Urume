### generated by <: $c.req.uri :> ###

no-hosts
resolv-file=/etc/dnsmasq.d/resolv.conf
domain=<: $c.stash.config.dns.domain :>

: for $c.stash.config.dns.servers -> $server {
server=<:= $server :>
: }

log-dhcp
dhcp-ignore=#known

: for $vms -> $vm {
# vm:<: $vm.name :>
address=/<: $vm.name :>/<: $vm.ip_addr :>
ptr-record=<: $vm.ip_addr.split('\.').reverse().join(".") :>.in-addr.arpa.,"<: $vm.name :>"
dhcp-host=<: $vm.mac_addr :>,<: $vm.ip_addr :>

: }
